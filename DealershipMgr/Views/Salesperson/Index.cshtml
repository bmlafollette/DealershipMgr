@model IEnumerable<DealershipMgr.Models.Salesperson>

@{
    ViewBag.Title = "Index";
}

<h2>Salespersons</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HireDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalesYtd)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SalesGoal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MetSalesGoal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location.LocationName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Region.RegionName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Clients)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HireDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SalesYtd)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SalesGoal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MetSalesGoal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location.LocationName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Region.RegionName)
        </td>
        <td>
            @{
                foreach (var client in item.Clients)
                {
                    @client.ClientID @:  @client.FullName <br />
                }
            }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
